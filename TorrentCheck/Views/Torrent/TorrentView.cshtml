@model TorrentCheck.Models.TorrentViewModels.TorrentViewModel
@{
    ViewData["Title"] = "TorrentView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TorrentView</h2>
<div>
    <form method="post" enctype="multipart/form-data" asp-controller="TorrentController" asp-action="Upload">
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload a torrent:</p>
                <input type="file" name="files" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>
</div>

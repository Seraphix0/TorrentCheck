@model TorrentCheck.Models.UploadViewModels.UploadViewModel;
@{
    ViewData["Title"] = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload</h2>
<form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="Upload">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload a .torrent file to decode using this form:</p>
            <input type="file" name="TorrentToDecode" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
